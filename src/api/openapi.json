{
  "openapi": "3.0.0",
  "info": {
    "title": "Subscription API",
    "version": "1.0.0",
    "description": "API for managing subscription plans and recurring payments"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/admins/check/{address}": {
      "get": {
        "summary": "Check if an address is an admin",
        "tags": [
          "Admins"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "address",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Admin status"
          }
        }
      }
    },
    "/delegations": {
      "post": {
        "summary": "Create a delegation for a signer address",
        "tags": [
          "Delegations"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "signerAddress",
                  "signedAuthorization"
                ],
                "properties": {
                  "signerAddress": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$",
                    "description": "The signer address to delegate",
                    "example": "0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb"
                  },
                  "signedAuthorization": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]+$",
                    "description": "Signed authorization for the delegation",
                    "example": "0x1234..."
                  },
                  "executor": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$",
                    "description": "Optional executor address (defaults to EXECUTOR_ADDR env var)",
                    "example": "0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb"
                  },
                  "publicExecution": {
                    "type": "boolean",
                    "description": "Whether execution is public (defaults to false)",
                    "example": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Delegation created or already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "already_delegated",
                        "submitted"
                      ]
                    },
                    "signerAddress": {
                      "type": "string"
                    },
                    "delegatedTo": {
                      "type": "string",
                      "description": "Present when status is already_delegated"
                    },
                    "code": {
                      "type": "string",
                      "description": "Present when status is already_delegated"
                    },
                    "txHash": {
                      "type": "string",
                      "description": "Present when status is submitted"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request body"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "get": {
        "summary": "Health check for delegations endpoint",
        "tags": [
          "Delegations"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/plans": {
      "get": {
        "summary": "Get all active plans",
        "tags": [
          "Plans"
        ],
        "responses": {
          "200": {
            "description": "List of plans"
          }
        }
      },
      "post": {
        "summary": "Create a new plan",
        "tags": [
          "Plans"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "x-admin-signature",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "EIP-191 signature of \"admin:create-plan:{slug}\""
          },
          {
            "in": "header",
            "name": "x-admin-address",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "^0x[a-fA-F0-9]{40}$"
            },
            "description": "Admin wallet address"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "slug",
                  "receiver",
                  "chainId",
                  "token",
                  "tokenSymbol",
                  "tokenDecimals",
                  "price",
                  "intervalSeconds",
                  "name"
                ],
                "properties": {
                  "slug": {
                    "type": "string",
                    "pattern": "^[a-z0-9-]+$"
                  },
                  "creator": {
                    "type": "string",
                    "description": "Set automatically from verified signer"
                  },
                  "receiver": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$"
                  },
                  "chainId": {
                    "type": "integer"
                  },
                  "token": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$"
                  },
                  "tokenSymbol": {
                    "type": "string"
                  },
                  "tokenDecimals": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 18
                  },
                  "price": {
                    "type": "string",
                    "pattern": "^\\d+$",
                    "description": "Price in base token units (uint256 string)"
                  },
                  "intervalSeconds": {
                    "type": "integer"
                  },
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "imageUrl": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Plan created successfully"
          },
          "400": {
            "description": "Invalid request body"
          },
          "401": {
            "description": "Missing or invalid signature"
          },
          "403": {
            "description": "Not an admin"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/plans/{id}": {
      "get": {
        "summary": "Get plan by ID (UUID)",
        "tags": [
          "Plans"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Plan found"
          },
          "404": {
            "description": "Plan not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "put": {
        "summary": "Update a plan",
        "tags": [
          "Plans"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "header",
            "name": "x-admin-signature",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "EIP-191 signature of \"admin:update-plan:{id}\""
          },
          {
            "in": "header",
            "name": "x-admin-address",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "^0x[a-fA-F0-9]{40}$"
            },
            "description": "Admin wallet address"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "slug": {
                    "type": "string",
                    "pattern": "^[a-z0-9-]+$"
                  },
                  "creator": {
                    "type": "string"
                  },
                  "receiver": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$"
                  },
                  "chainId": {
                    "type": "integer"
                  },
                  "token": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$"
                  },
                  "tokenSymbol": {
                    "type": "string"
                  },
                  "tokenDecimals": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 18
                  },
                  "price": {
                    "type": "string",
                    "pattern": "^\\d+$"
                  },
                  "intervalSeconds": {
                    "type": "integer"
                  },
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "imageUrl": {
                    "type": "string",
                    "format": "uri"
                  },
                  "active": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Plan updated successfully"
          },
          "400": {
            "description": "Invalid request body"
          },
          "401": {
            "description": "Missing or invalid signature"
          },
          "403": {
            "description": "Not an admin"
          },
          "404": {
            "description": "Plan not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "delete": {
        "summary": "Delete a plan",
        "tags": [
          "Plans"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "header",
            "name": "x-admin-signature",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "EIP-191 signature of \"admin:delete-plan:{id}\""
          },
          {
            "in": "header",
            "name": "x-admin-address",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "^0x[a-fA-F0-9]{40}$"
            },
            "description": "Admin wallet address"
          }
        ],
        "responses": {
          "200": {
            "description": "Plan deleted successfully"
          },
          "401": {
            "description": "Missing or invalid signature"
          },
          "403": {
            "description": "Not an admin"
          },
          "404": {
            "description": "Plan not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/plans/slug/{slug}": {
      "get": {
        "summary": "Get plan by slug",
        "tags": [
          "Plans"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "slug",
            "required": true,
            "schema": {
              "type": "string",
              "pattern": "^[a-z0-9-]+$"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Plan found"
          },
          "404": {
            "description": "Plan not found"
          }
        }
      }
    },
    "/api/subscriptions": {
      "post": {
        "summary": "Create a new subscription",
        "tags": [
          "Subscriptions"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "userId",
                  "planId"
                ],
                "properties": {
                  "userId": {
                    "type": "string",
                    "description": "Wallet address (0x...)"
                  },
                  "planId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "onChainSubscriptionId": {
                    "type": "integer",
                    "description": "Optional; set after user creates subscription on-chain"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Subscription created"
          },
          "400": {
            "description": "Invalid request body"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/subscriptions/user/{userId}": {
      "get": {
        "summary": "Get subscriptions for a user",
        "tags": [
          "Subscriptions"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of subscriptions"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/subscriptions/{id}": {
      "get": {
        "summary": "Get subscription by ID",
        "tags": [
          "Subscriptions"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Subscription found"
          },
          "400": {
            "description": "Invalid id"
          },
          "404": {
            "description": "Subscription not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "patch": {
        "summary": "Update subscription (set on-chain ID)",
        "tags": [
          "Subscriptions"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "userId",
                  "onChainSubscriptionId"
                ],
                "properties": {
                  "userId": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$",
                    "description": "Wallet address for ownership verification"
                  },
                  "onChainSubscriptionId": {
                    "type": "integer",
                    "minimum": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Subscription updated"
          },
          "400": {
            "description": "Invalid request body"
          },
          "403": {
            "description": "Not your subscription"
          },
          "404": {
            "description": "Subscription not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/subscriptions/{id}/retry": {
      "post": {
        "summary": "Retry a failed subscription payment",
        "tags": [
          "Subscriptions"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "userId"
                ],
                "properties": {
                  "userId": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$",
                    "description": "Wallet address for ownership verification"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Subscription with retry result"
          },
          "400": {
            "description": "Invalid id or request body"
          },
          "403": {
            "description": "Not your subscription"
          },
          "404": {
            "description": "Subscription not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/subscriptions/{id}/cancel": {
      "post": {
        "summary": "Cancel a subscription",
        "tags": [
          "Subscriptions"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "userId"
                ],
                "properties": {
                  "userId": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$",
                    "description": "Wallet address for ownership verification"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Invalid id or request body"
          },
          "403": {
            "description": "Not your subscription"
          },
          "404": {
            "description": "Subscription not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/subscriptions/relay-create": {
      "post": {
        "summary": "Gasless subscription create via relayer",
        "tags": [
          "Subscriptions"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "userId",
                  "planId",
                  "token",
                  "receiver",
                  "amount",
                  "interval",
                  "startTime",
                  "endTime",
                  "maxExecutions",
                  "nonce",
                  "signature"
                ],
                "properties": {
                  "userId": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$"
                  },
                  "planId": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "token": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$"
                  },
                  "receiver": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$"
                  },
                  "amount": {
                    "type": "string",
                    "pattern": "^\\\\d+$"
                  },
                  "interval": {
                    "type": "string",
                    "pattern": "^\\\\d+$"
                  },
                  "startTime": {
                    "type": "string",
                    "pattern": "^\\\\d+$"
                  },
                  "endTime": {
                    "type": "string",
                    "pattern": "^\\\\d+$"
                  },
                  "maxExecutions": {
                    "type": "string",
                    "pattern": "^\\\\d+$"
                  },
                  "nonce": {
                    "type": "string",
                    "pattern": "^\\\\d+$"
                  },
                  "signature": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]+$"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Subscription created; returns subscription and txHash"
          },
          "400": {
            "description": "Invalid request body"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/api/subscriptions/relay-cancel": {
      "post": {
        "summary": "Gasless subscription cancel via relayer",
        "tags": [
          "Subscriptions"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "userId",
                  "backendSubId",
                  "onChainSubId",
                  "nonce",
                  "signature"
                ],
                "properties": {
                  "userId": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]{40}$"
                  },
                  "backendSubId": {
                    "type": "integer",
                    "minimum": 1
                  },
                  "onChainSubId": {
                    "type": "string",
                    "pattern": "^\\\\d+$"
                  },
                  "nonce": {
                    "type": "string",
                    "pattern": "^\\\\d+$"
                  },
                  "signature": {
                    "type": "string",
                    "pattern": "^0x[a-fA-F0-9]+$"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success; returns success and txHash"
          },
          "400": {
            "description": "Invalid request body"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {},
  "tags": []
}